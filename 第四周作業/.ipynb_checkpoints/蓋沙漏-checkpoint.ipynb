    "res = ''\n",
    "size = int(input('要蓋個幾層好呢?  '))\n",
    "lines = list(range(1, int(size) + 1))[::-2] + list(range(3, int(size) + 1))[::2]\n",
    "\n",
    "for line in lines:\n",
    "    res += int((size-line)/2)*' ' + line*'*'+'\\n'\n",
    "\n",
    "print(res)"
